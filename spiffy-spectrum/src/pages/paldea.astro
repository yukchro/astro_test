---
import Layout from "../layouts/Layout.astro";
import List from '../components/list.astro';
import Search from '../components/search.astro';
import NavHeader from '../components/navHeader.astro';
import pokeData from '../data.json';
import Pagefind from "../components/pagefind.astro";
---

<Layout title="Paldea Pokedex">
  <div class="p-container" transition:animate="slide">
    <div class="p-container__box">
      <NavHeader />
      <List pdata={pokeData} />
      <Pagefind />
    </div>
  </div>
</Layout>

<style lang="scss">
  .p-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #eee;
    
    &__box {
      max-width: 480px;
      width: 100%;
      aspect-ratio: 9/16;
      background-color: #fff;
      padding-bottom: 96px;
    }
  }

</style>