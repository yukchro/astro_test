---
import Layout from "../../layouts/Layout.astro";
import pokeData from '../../data.json';

export async function getStaticPaths() {
  const pages = pokeData;
  return pages.map(({ numberAll, nameJpn, category, descriptions, ja, weight, height, type1, type2}) => {
    return {
      params: { numberAll },
      props: { numberAll, nameJpn, category, descriptions, ja, weight, height, type1, type2 },
    };
  });
}

const { numberAll, nameJpn, category, descriptions, ja, weight, height, type1, type2 } = Astro.props;
---

<Layout title={ `${nameJpn}` } thumbnail={ `${numberAll}` }>
  <main data-pagefind-body transition:animate="slide">
    <div class="pokedex-detail">
      <div class="pokedex-detail__inner">
        <img src={"/assets/sprite/"+numberAll+"_large.png"} class="pokedex-detail__eyecatch" width="1280" height="720" decoding="async">
        <div class="pokedex-detail__grid">
          <img src={"/assets/sprite/"+numberAll+".png"} alt="" width="160" height="160" class="pokedex-detail__icon"  data-pagefind-meta="image[src]">
          <div class="pokedex-detail__stats">
            <h1 class="pokedex-detail__name">{ nameJpn }</h1>
            <span class="pokedex-detail__category">{ category }ポケモン</span>
            <span class="pokedex-detail__size">おもさ: { weight } kg / たかさ: { height } m</span>
            <ul class="pokedex-detail__types">
              <li class={"pokedex-detail__type u-type-" + type1}>
                <img src={"/assets/images/" +type1+".svg"} class="pokedex-detail__type-icon">
                <span class="pokedex-detail__type-label">{type1}</span>
              </li>
              {
                type2 &&
                <li class={"pokedex-detail__type u-type-" + type2}>
                  <img src={"/assets/images/" +type2+".svg"} class="pokedex-detail__type-icon">
                  <span class="pokedex-detail__type-label">{type2}</span>
                </li>
              }
            </ul>
          </div>
          <dl class="pokedex-detail__description">
            <dt class="pokedex-detail__description-label">スカーレット:</dt>
            <dd class="pokedex-detail__description-value">{ descriptions['scarlet'] }</dd>
            <dt class="pokedex-detail__description-label">バイオレット:</dt>
            <dd class="pokedex-detail__description-value">{ descriptions['violet'] }</dd>
            
          </dl>
        </div>
        <div class="pokedex-detail__back">
          <a href="/paldea/" class="pokedex-detail__back-button"><span class="pokedex-detail__back-rect">戻る</span></a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .pokedex-detail {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 16px;
    min-height: 100vh;

    &__inner {
      position: relative;
      border-radius: 16px;
      background-color: #d9d9d9;
    }

    &__eyecatch {
      display: block;
      width: 100%;
      height: auto;
      border-top-left-radius: 16px;
      border-top-right-radius: 16px;
    }

    &__grid {
      padding-top: 16px;
      padding-left: 16px;
      padding-right: 16px;
      padding-bottom: 80px;
      display: grid;
      grid-template-columns: auto 1fr;
      grid-column-gap: 24px;
      grid-row-gap: 32px;
    }

    &__icon {
      width: 96px;
      background-color: rgba(#000, 0.2);
      border-radius: 16px;
    }

    &__description {
      grid-column: 1/3;
    }

    &__stats {
      
    }

    &__name {
      margin-bottom: 8px;
      font-size: 1.8rem;
      font-weight: 700;
    }

    &__category {
      display: block;
      margin-bottom: 8px;
      font-size: 1.2rem;
    }

    &__size {
      display: block;
      margin-bottom: 8px;
      font-size: 1.2rem;
    }

    &__types {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      column-gap: 8px;
    }

    &__type {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 4px 8px;
      border-radius: 12px;
      height: 24px;
      column-gap: 8px;
    }

    &__type-icon {
      width: 16px;
      height: 16px;
    }

    &__type-label {
      color: #fff;
      font-size: 1.2rem;
      font-weight: 700;
      text-transform: capitalize;
    }

    &__description {
      display: flex;
      flex-direction: column;
    }
    
    &__description-label {
      margin-bottom: 4px;
      font-size: 1.2rem;
      color: #666;
    }

    &__description-value {
      font-size: 1.4rem;
      font-weight: 700;

      &:not(:last-child) {
        margin-bottom: 16px;
      }
    }

    &__back {
      position: absolute;
      bottom: calc(-32px);
      left: 0;
      width: 100%;
      display: flex;
      justify-content: center;
    }
    
    &__back-button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 64px;
      height: 64px;
      background-color: #333;
      border-radius: 50%;

      &:active {
        translate: 1px 1px;
        box-shadow: inset 4px 4px rgba(#000, 0.4);
      }
    }

    &__back-rect {
      position: relative;
      width: 16px;
      height: 2px;
      background-color: #fff;
      rotate: 45deg;
      font-size: 0;
      color: transparent;

      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: inherit;
        rotate: 90deg;
      }
    }
  }
</style>